.container
.col-md-4.col-md-offset-4.col-sm-4.col-sm-offset-4.signup-container
  %h2.text-center.logo Howard
  #canvas.text-center
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.email_field :email, placeholder: "email", class: "form-control"
    .form-group
      = f.password_field :password, placeholder: "password", class: "form-control"
    .form-group
      = f.submit "Sign in", class: "btn btn-default signup-btn"  
    = render "devise/shared/links"

%nav.navbar.navbar-default.navbar-fixed-bottom{role: "navigation", style: "background-color: #557B7C"}